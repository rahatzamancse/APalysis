{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "baseUrl": "./src",
    "paths": {
        "@/*": ["./*"],
        "@components/*": ["./components/*"],
        "@hooks": ["./app/hooks"],
        "@features/*": ["./features/*"],
        "@types": ["./types"],
        "@api": ["./api"],
        "@views/*": ["./components/LayerViews/*"],
        "@utils/*": ["./utils/*"],
        "@styles": ["./styles"]
    }
  },
  "include": ["src"]
}
